<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#627986"
    tools:context=".RegisterActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/tregistrasi"
        android:text="REGISTRASI"
        android:textSize="28dp"
        android:textColor="#FFC107"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reg_namalengkap"
        android:hint="Nama Lengkap"
        android:layout_below="@id/tregistrasi"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eUsername"
        android:hint="Username"
        android:layout_below="@id/reg_namalengkap"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/esim"
        android:hint="Nomor SIM"
        android:layout_below="@id/eUsername"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ePassword"
        android:hint="Password"
        android:layout_below="@id/esim"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ekonfPassword"
        android:hint="Konfirmasi Password"
        android:layout_below="@id/ePassword"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"/>



    <Button
        android:layout_width="800dp"
        android:layout_height="50dp"
        android:id="@+id/bRegister"
        android:text="REGISTRASI"
        android:onClick="bRegister"
        android:background="@android:color/holo_orange_light"
        android:layout_below="@id/ekonfPassword"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        tools:ignore="OnClick" />

</RelativeLayout>

</ScrollView>